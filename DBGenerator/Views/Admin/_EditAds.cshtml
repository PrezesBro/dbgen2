@model DBGenerator.Models.Ads.Ads

<h4>@Model.Position</h4>
<hr />
<div class="row">
    <div class="col-12" style="margin:10px;">
        <div class="mb-3" style="background-color:@Model.BackgroundColor;border-radius:10px;padding:10px;">
            <form asp-action="SaveAds">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Position"/>
                <div class="row mb-3">
                    <div class="col-xxl-6">
                        <img src="@Model.ImageUrl" style="width:100%"/>
                    </div>
                    <div class="col-xxl-6">
                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="control-label"></label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="BackgroundColor" class="control-label"></label>
                            <input asp-for="BackgroundColor" class="form-control" />
                            <span asp-validation-for="BackgroundColor" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="checkbox" role="switch" asp-for="IsVisible" class="form-check-input" />
                            <label asp-for="IsVisible" class="form-check-label"></label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="checkbox" role="switch" asp-for="IsPromotion" class="form-check-input" />
                            <label asp-for="IsPromotion" class="form-check-label"></label>
                        </div>
                    </div>
                </div>    
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DestinationUrl" class="control-label"></label>
                    <input asp-for="DestinationUrl" class="form-control" />
                    <span asp-validation-for="DestinationUrl" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-xxl-6">
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xxl-6">
                        <div class="form-group mb-3">
                            <label asp-for="PromoPrice" class="control-label"></label>
                            <input asp-for="PromoPrice" class="form-control" />
                            <span asp-validation-for="PromoPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xxl-6">
                        <div class="form-group mb-3">
                            <input type="submit" value="Zapisz" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-xxl-6">
                        <div class="form-group mb-3">
                            <label asp-for="EndPromotion" class="control-label"></label>
                            <input asp-for="EndPromotion" class="form-control" />
                            <span asp-validation-for="EndPromotion" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

