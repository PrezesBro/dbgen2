@model DBGenViewModel

@{
    ViewData["Title"] = "Wybór bazy danych (enum)";
}

<h2>Wybierz bazę danych</h2>

<form asp-action="GenerateDatabase" method="post" class="mt-3 row">
    @Html.AntiForgeryToken()

    <div class="mb-3 col-5">
        <label asp-for="SelectedEngine" class="form-label"></label>
        <select asp-for="SelectedEngine" class="form-select">
            <option value="">-- wybierz --</option>
            @foreach (var db in Model.EngineTypes)
            {
                <option value="@db.Value">@db.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedEngine" class="text-danger"></span>
    </div>

    <div class="mb-3 col-5">
        <label asp-for="SelectedDatabase" class="form-label"></label>
        <select asp-for="SelectedDatabase" class="form-select">
            <option value="">-- wybierz --</option>
            @foreach (var db in Model.Databases)
            {
                <option value="@db.Value">@db.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedDatabase" class="text-danger"></span>
    </div>

    <div class="col-2 d-flex flex-column mb-3">
        <div class="mt-auto text-end">
            <button type="submit" class="btn btn-primary">Generuj</button>
        </div>
    </div>

</form>
@if (!System.String.IsNullOrEmpty(Model.Script))
{
    <div class="row">
        <div class="col-12">
            <textarea asp-for="Script" class="form-control" readonly></textarea>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}